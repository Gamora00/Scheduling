        </ul>
        <form class="d-flex mt-3" role="search">
          <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
          <button class="btn btn-outline-success" type="submit">Search</button>
        </form>
      </div>
    </div>
  </div>
</nav>

<div class="container">
    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">ID</th>
                <th scope="col">First name</th>
                <th scope="col">Last Name</th>
                <th scope="col">Username</th>
                <th scope="col">Options</th>
            </tr>
        </thead>
        <tbody class="table-group-divider">
            {{#each adminData}}
            <tr>
                <th scope="row">{{admin_id}}</th>
                <td>{{first_name}}</td>
                <td>{{last_name}}</td>
                <td>{{admin_username}}</td>
                <td>
                    <!-- Button trigger modal -->
                    <button type="button" class="btn btn-success" data-bs-toggle="modal" data-bs-target="#viewModal{{admin_id}}">
                        View
                    </button>
                    <!-- Modal -->
                    <div class="modal fade" id="viewModal{{admin_id}}" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="viewModal{{admin_id}}Label" aria-hidden="true">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h1 class="modal-title fs-5" id="viewModal{{admin_id}}Label">Details</h1>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                </div>
                                <div class="form-container row g-1">
                                    <div class="form-floating mb-3 col-md-5">
                                        <input type="text" readonly class="form-control-plaintext" id="teacher_username_{{admin_id}}" placeholder="username" value="{{admin_username}}">
                                        <label for="teacher_username_{{admin_id}}">Username</label>
                                    </div>
                                    <div class="form-floating mb-3 col-md-5">
                                        <input type="text" readonly class="form-control-plaintext" id="admin_id{{admin_id}}" placeholder="teacher_id" value="{{admin_id}}">
                                        <label for="admin_id{{admin_id}}">ADmin ID</label>
                                    </div>
                                    <div class="form-floating mb-3 col-md-5">
                                        <input type="text" readonly class="form-control-plaintext" id="first_name_{{admin_id}}" placeholder="first_name" value="{{first_name}}">
                                        <label for="first_name_{{admin_id}}">First Name</label>
                                    </div>
                                    <div class="form-floating mb-3 col-md-5">
                                        <input type="text" readonly class="form-control-plaintext" id="last_name_{{admin_id}}" placeholder="last_name" value="{{last_name}}">
                                        <label for="last_name_{{admin_id}}">Last Name</label>
                                    </div>
                                    
                                </div>
                            </div>
                        </div>
                    </div>

                    <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#editModal{{admin_id}}">
                        Edit
                    </button>
                    <!-- Modal -->
                    <div class="modal fade" id="editModal{{admin_id}}" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="editModal{{teacher_id}}Label" aria-hidden="true">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h1 class="modal-title fs-5" id="editModal{{teacher_id}}Label">Edit Details</h1>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                </div>
                                <div class="form-container">
                                    <form action="/auth/adminEdit" class="row g-1" method="post">
                                        <div class="form-floating mb-3 col-md-5">
                                            <input type="text" class="form-control" id="adminUsername{{admin_id}}" name="username" placeholder="adminUsername" value="{{admin_username}}">
                                            <label for="adminUsername{{admin_id}}">Username</label>
                                        </div>
                                        <div class="form-floating mb-3 col-md-5">
                                            <input type="text" class="form-control" id="adminPassword{{admin_id}}" name="password" placeholder="password" value="">
                                            <label for="adminPassword{{admin_id}}">Password</label>
                                        </div>
                                        <div class="form-floating mb-3 col-md-5">
                                            <input type="text" readonly class="form-control" name="ID" id="admin_id_edit{{admin_id}}" placeholder="admin_id" value="{{admin_id}}">
                                            <label for="admin_id_edit{{teacher_id}}">Admin ID</label>
                                        </div>
                                        <div class="form-floating mb-3 col-md-5">
                                            <input type="text" class="form-control" id="first_name_edit{{admin_id}}" name="firstName" placeholder="first_name" value="{{first_name}}">
                                            <label for="first_name_edit{{teacher_id}}">First Name</label>
                                        </div>
                                        <div class="form-floating mb-3 col-md-5">
                                            <input type="text" class="form-control" id="last_name_edit{{admin_id}}" name="lastName" placeholder="last_name" value="{{last_name}}">
                                            <label for="last_name_edit{{teacher_id}}">Last Name</label>
                                        </div>
                                        <button type="submit" class="btn btn-primary">Submit</button>
                                    </form>
                                    {{#if successful}}
                                      <div class="alert alert-success" role="alert">
                                         {{successful}}
                                      </div>
                                    {{/if}}
                                </div>
                            </div>
                        </div>
                    </div>

                    <button type="button" class="btn btn-warning" data-bs-toggle="modal" data-bs-target="#deleteModal{{admin_id}}">
    Archive
</button>
<!-- Modal -->
<div class="modal fade" id="deleteModal{{admin_id}}" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="deleteModal{{admin_id}}Label" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="deleteModal{{admin_id}}Label">Confirmation</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <p class="p-3">Are you sure you want to archive this account?</p>
            <div class="modal-footer">
                <form action="/auth/archiveAdmin" method="post">
                    <input type="hidden" name="admin_id" value="{{admin_id}}">
                    <button type="submit" class="btn btn-warning">Archive</button>
                </form>
                <button type="button" class="btn btn-primary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>

{{#if message}}
<h4 class="alert alert-danger mt-4">{{message}}</h4>
{{else}}
{{#if successfully}}
<h4 class="alert alert-success mt-4">{{successfully}}</h4>
{{/if}}
{{/if}}

</body>
</html>
